
        <div class="page-width arisit-brand-container">
            <div class="arisit-brand-row">
                {% for block in section.blocks %}
                    {% if block.settings.arisit-brand-logo and block.settings.arisit-brand-text != blank %}
                <div class="arisit-brand-item">
                        <img src="{{ block.settings.arisit-brand-logo }}" height="100" width="100" class="arisit-brand-logo" loading="lazy">
                    <span class="arisit-brand-text"> {{ block.settings.arisit-brand-text }}</span>
                    <a class="brand-buttons" href="{{ block.settings.brand-btn-link }}" target="_blank">
                        {{ block.settings.brand-shop-btn }}
                    </a>
                </div>
                {%endif%}
    {% endfor %}
            </div>
        </div>

{% schema %}
{
    "blocks": [
                {
                "type":"arisit-brands",
                "name":"Brand",
                "settings":[
                    {
                    "type":"image_picker",
                    "id":"arisit-brand-logo",
                    "label":"Logo"
                    },
                    {
                    "type":"textarea",
                    "id":"arisit-brand-text",
                    "label":"Text"
                    },
                    {
                    "id": "brand-btn-link",
                    "type": "url",
                    "label": "Button URL"
                    },
                    {
                    "id": "brand-shop-btn",
                    "type": "text",
                    "label": "Button name"
                    }
                ]}
    
              ],
    "presets":[
        {
        "name":"Arisit Brands",
        "category":"Brands"}
    ]}
    {% endschema %}

    {% style %}
    
    .arisit-brand-container{

    }

    .arisit-brand-row{
        display:flex;
        flex-direction:row;
       

    }

    .arisit-brand-item{
        display:flex;
        flex-direction:column;
        height:300px;
        width:15vw;
        border: 1px solid black;
        border-radius: 10px;
        margin: 20px;

    }

    
    .arisit-brand-logo{
        -webkit-font-smoothing: antialiased;
        -webkit-text-size-adjust: 100%;
        text-rendering: optimizeSpeed;
        font-weight: 400;
        text-align: center;
        color: var(--colorTextBody);
        box-sizing: border-box;
        border: 0 none;
        max-width: 100%;
        opacity: 1;
        transition: opacity 0.4s ease;
        margin: 0 auto;
        display: block;
        width: 100%;
        height: 80px;
    }

    .arisit-brand-text{

    }

    .brand-buttons{
       
		background: #2F4E82;
		color: black;
		border: 1px solid black;
       

        padding: 11px 20px;
        margin:10px;
        
        /* width: 100%; */
 		
        min-width: 90px;
        line-height: 1.42;
        font-size: 16px;
       
        text-align: center;
        cursor: pointer;
        
		-webkit-user-select: none;
        user-select: none;
        -webkit-appearance: none;
        -moz-appearance: none;
        border-radius: 5px;

	}

    .brand-buttons:hover{
        background:black;
        color:white;
        }

    }
    
    {% endstyle %}