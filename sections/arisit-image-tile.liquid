<div class ="tile-container">
    
    <div class="tile-row">
        {% for block in section.blocks %}
            {% if block.settings.tile-image != blank %}
            <div class="tile-item">
                <span class = "tile-title"> {{ block.settings.tile-title }} </span>
               <img src={{ block.settings.tile-image | img_url: 'master' }} class="tile-image" >
               {% comment %} <span class = "tile-title"> {{ block.settings.tile-title }} </span> {% endcomment %}
                <div class="tile-text-container">
                    <div class="tile-text">
                        {{ block.settings.tile-text }}
                    </div>
                </div>
            </div>
            {% endif %}
        {% endfor %}
    </div>
    </div>

{% schema %}

{
    "name":"Arisit Image Tile",
    "settings":[
        {
        "type":"text",
        "id":"arisit-image-tile-title",
        "label":"Row Title"
    }
    ],
    "blocks":[
        {
        "type":"arisit-images",
        "name":"Image Tile",
        "settings":[
            {
            "type":"image_picker",
            "id":"tile-image",
            "label":"Pick an image"
        },
    {
        "type":"text",
        "id":"tile-title",
        "label":"Tile Title"
    },
    {
        "type":"textarea",
        "id":"tile-text",
        "label":"Tile Text"
    }
        ]}
    ],

    "presets": [
        {
        "name":"Arisit Tiles",
        "category":"Image"}
    ]}

{% endschema %}


{% style %}

 .tile-container{
     align-items:center;
     /* width:95%; */

 }

 .tile-row{
     margin:0 5% 0 4%;

     display:flex;
     flex-wrap:wrap;
     justify-content: center;
    
 }

 .tile-item{
    display:flex;
    flex-direction:column;
    /* min-height:200px; */
    height:288px;
    /* min-width:25%; */
    max-width:25%;
    position:relative;
    cursor:pointer;
    margin:20px 20px 0 20px;
    flex: 1 0 21%; 

    border-radius:5%;
    overflow:hidden;


 }

 .tile-image{
     /* width:375px; */
     opacity: 1;
     transition: 0.3s ease;

 }

 .tile-title{
    text-align:center;
    text-transform: uppercase;
    font-size:14px;
    color: white;
    background:#2F4E82;
    /* max-width:375px; */

 }

 .tile-text-container{
     position:absolute;
     background: white;
     /* bottom:27px; */
     width:100%;
     bottom:0;
     opacity:0;
     transition: 0.5s ease;
     /* max-width:375px; */
     flex-wrap:wrap;
 }

 .tile-text{
     text-align:justify;
     color:#2F4E82;
     padding:20px;
     opacity:1;

 }

 .tile-item:hover .tile-image {
     opacity: 0.8;
 }

 .tile-item:hover .tile-text-container {
     opacity: 1;
 }

 .tile-item:hover {
    border: 2px solid #E5E5E5;
 }

