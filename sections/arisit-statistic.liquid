<div class=" arisit-statistics-row page-width">
        
    {% for block in section.blocks %}
        {% if block.settings.arisit-statistics-number != blank %}
            <div class="arisit-statistics-item">
                <span class="statistics-number">
                   {{ block.settings.arisit-statistics-number }}
                </span> <br>
                <span class="statistics-text">
                    {{ block.settings.arisit-statistics-text }}
                </span> <br>
                <span class="statistics-small-text">
                    {{ block.settings.arisit-statistics-small-text }}
                </span>
            </div>
        {%endif%}
        {% endfor %}
</div>


<script>
    $(document).on('ready', function () {
        $('.arisit-statistics-row').slick({
            
            dots: true,
            infinite: true,
            slidesToShow: 3,
            slidesToScroll: 3,
            arrows: true,
            autoplay: true,
            autoplaySpeed: 2000,
            responsive: [
                {
                  breakpoint: 1024,
                  settings: {
                    arrows: true,
                    slidesToShow: 3,
                    slidesToScroll: 3,
                    infinite: true,
                    dots: true
                  }
                },
                {
                  breakpoint: 768,
                  settings: {
                    arrows: true,
                    slidesToShow: 2,
                    slidesToScroll: 2,
                    infinite: true,
                    dots: true
                  }
                },
                {
                  breakpoint: 600,
                  settings: {
                    arrows: true,
                    slidesToShow: 1,
                    slidesToScroll: 1,
                    infinite: true,
                    dots: true
                  }
                },
                
                // You can unslick at a given breakpoint now by adding:
                // settings: "unslick"
                // instead of a settings object
              ]
        });
    });
</script>

{% schema %}

{
"blocks": [
{
"type":"arisit-statistics",
"name":"Stats Info",
"settings":[
{
"type":"text",
"id":"arisit-statistics-number",
"label":"Number"
},
{
"type":"text",
"id":"arisit-statistics-text",
"label":"Big Text"
},
 {
"type":"textarea",
"id":"arisit-statistics-small-text",
"label":"Small Text"
}
]}

],
"presets":[
{
"name":"Arisit Statistics",
"category":"Statistics"}
]}
{% endschema %}

{% style %}

.arisit-statistics-row{
margin-top:-130px;

display:flex;
flex-wrap: wrap; /* it tells items to wrap in a container making multiline. in default there is nowrap which brings items in a single line  */
flex-direction:row;
justify-content:space-between;
}


.arisit-statistics-item{
float:left;
width: 50%;
margin:20px 20px 0 20px;
background: #E5E5E5;
text-align:center;
padding:10px 5px 15px 5px;
flex: 1 0 29%;  /* flex is a shorthand for flex-grow flex-shrink, flex-basis  */

}

.statistics-number{
font-size:40px;
font-weight: bold;
color:#20447E;
}

.statistics-text{
font-weight:bold;
text-transform: uppercase;
}

.statistics-small-text{
text-transform: uppercase;
}

@media screen and (max-width: 600px) {

.arisit-statistics-row{
/* margin-top:20px; */
margin-top:-20px;
flex: 1 1 1;
}

.arisit-statistics-item{
padding:10px;
font-size: 14px;
/* min-width:50%; */
}

.statistics-number{
font-size: 25px;
}

.statistics-small-text{
text-transform: capitalize;
}
}

{% endstyle %}